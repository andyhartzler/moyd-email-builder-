# Listmonk Admin Credentials
LISTMONK_ADMIN_USERNAME=admin
LISTMONK_ADMIN_PASSWORD=your-secure-password-here

# Listmonk Root URL (public URL where Listmonk will be accessed)
LISTMONK_ROOT_URL=https://your-domain.com

# Supabase Database Connection - Direct Connection
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-supabase-password
DB_NAME=postgres
DB_SSL_MODE=require
DB_SCHEMA=listmonk
DB_PARAMS=statement_cache_mode=disable

# Alternative: Use connection pooler (if direct connection has issues)
# DB_HOST=aws-0-us-east-1.pooler.supabase.com
# DB_PORT=6543
# DB_USER=postgres.your-project-ref
